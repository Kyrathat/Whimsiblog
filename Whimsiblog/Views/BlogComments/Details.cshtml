@model DataAccessLayer.Model.BlogComment

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>BlogComment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.OwnerUserName</dd>

        <dt class="col-sm-2">Blog Post</dt>
        <dd class="col-sm-10">@Model.BlogPost?.Title</dd>

        <dt class="col-sm-2">Comment</dt>
        <dd class="col-sm-10">@Model.Body</dd>

        <dt class="col-sm-2">Replying To</dt>
        <dd class="col-sm-10">
            @if (Model.ParentComment != null)
            {
                <strong>@Model.ParentComment.OwnerUserName</strong><br />
                @Model.ParentComment.Body
            }
            else
            {
                <span>—</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.BlogCommentID">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model?.BlogCommentID">Delete</a> |
    <a asp-action="Create" asp-route-blogPostId="@Model.BlogPostID" asp-route-parentCommentId="@Model.BlogCommentID">Reply</a> |
    <a asp-action="Index">Back to List</a>
</div>
