@model DataAccessLayer.Model.BlogComment

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>BlogComment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.OwnerUserName</dd>

        <dt class="col-sm-2">Blog Post</dt>
        <dd class="col-sm-10">@Model.BlogPost?.Title</dd>

        <dt class="col-sm-2">Comment</dt>
        <dd class="col-sm-10">@Model.Body</dd>

        <dt class="col-sm-2">Replying To</dt>
        <dd class="col-sm-10">
            @if (Model.ParentComment != null)
            {
                <strong>@Model.ParentComment.OwnerUserName</strong>
            
                <br />
                @Model.ParentComment.Body
            }
            else
            {
                <span>—</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BlogCommentID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
