@model DataAccessLayer.Model.BlogComment

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>BlogComment</h4>
<hr />

<div class="row">
    <div class="col-md-6">

        @* Show parent comment if replying *@
        @if (Model.ParentComment != null)
        {
            <div>
                <strong>Replying to:</strong><br />
                <em>@Model.ParentComment.OwnerUserName</em><br />
                @Model.ParentComment.Body
            </div>
            <hr />
        }

        @* Show blog post title read-only *@
        @if (Model.BlogPost != null)
        {
            <div>
                <strong>Blog Post:</strong><br />
                @Model.BlogPost.Title
            </div>
            <hr />
        }

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Body" class="control-label">Your Comment</label>
                <textarea asp-for="Body" class="form-control"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>

            @* Hidden fields *@
            <input type="hidden" asp-for="BlogPostID" />
            <input type="hidden" asp-for="ParentCommentID" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
