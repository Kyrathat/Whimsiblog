@using System.Linq
@model IEnumerable<DataAccessLayer.Model.Blog>

@{
    ViewData["Title"] = "Blogs";
    var q = (string?)ViewData["q"] ?? "";
    var isAuth = User?.Identity?.IsAuthenticated ?? false;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="m-0">Blogs</h1>

    <div class="d-flex align-items-center">
        @if (isAuth)
        {
                <a class="btn btn-primary me-2" asp-action="Create">Create New</a>
        }
        <form method="get" class="d-flex" role="search">
            <input name="q" value="@q" class="form-control me-2" placeholder="Search by name..." />
            <button class="btn btn-outline-primary" type="submit">Search</button>
        </form>
    </div>
</div>

@if (Model == null || !Model.Any())
{
        <div class="alert alert-info">
        @if (string.IsNullOrWhiteSpace(q))
        {
                    <span>No blogs yet. Be the first to create one!</span>
        }
        else
        {
                    <span>No results for "<strong>@q</strong>".</span>
        }
        </div>
}
else
{
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Tags</th>
                    <th style="width:240px;"></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            @if (item.Tags != null && item.Tags.Any())
                            {
                                @foreach (var tag in item.Tags)
                                {
                                    <span class="badge bg-secondary me-1">@tag.Name</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">No tags</span>
                            }
                        </td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.BlogId">Details</a>
                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.BlogId">Edit</a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.BlogId">Delete</a>
                        </td>
                    </tr>
            }
            </tbody>
        </table>
}
