@model IEnumerable<DataAccessLayer.Model.Blog>
@{
    ViewData["Title"] = "Blogs";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="m-0">Blogs</h1>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</div>

@if (Model == null || !Model.Any())
{
        <div class="alert alert-info">No blogs yet. Be the first to create one!</div>
}
else
{
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(_ => Model.First().Name)</th>
                    <th style="width:240px;"></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.Name</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.BlogId">Details</a>
                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.BlogId">Edit</a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.BlogId">Delete</a>
                        </td>
                    </tr>
            }
            </tbody>
        </table>
}
