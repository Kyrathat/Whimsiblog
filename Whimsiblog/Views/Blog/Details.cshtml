@model DataAccessLayer.Model.Blog
@{
    ViewData["Title"] = "Blog Details";
}

<h1>Blog Details</h1>

@if (Model is null)
{
        <div class="alert alert-danger">Blog not found.</div>
}
else
{
        <dl class="row">
            <dt class="col-sm-2">Id</dt>
            <dd class="col-sm-10">@Model.BlogId</dd>

            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>
                <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">
                @if (string.IsNullOrWhiteSpace(Model.Description))
                {
                    <span class="text-muted">No description</span> //If there is no description given
                }
                else
                {
                    @Model.Description // Retrive the description if we have it
                }
    </dd>

        </dl>

        <div class="mt-3">
            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.BlogId">Edit</a>
            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.BlogId">Delete</a>
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
}
